extends layout

block content
	.container
		.page-header.text-center
			h1
				span.fa.fa-anchor
				span Profile Page
			a(href='/logout').btn.btn-default.btn-sm Logout

		.row
			.col-sm-6
				.well
					h3
						span.fa.fa-user
						span Local
					p
						strong id:
						span=user._id
						br
						strong email:
						span=user.local.email
						br
						strong password;
						span=user.local.password	